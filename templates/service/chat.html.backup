                if (data.code === 0) {
                    // å‘é€ç³»ç»Ÿæ¶ˆæ¯
                    addSystemMessage('ä¼šè¯å·²ç»“æŸ');
                    
                    // é€šçŸ¥è®¿å®¢
                    if (socket && socket.connected) {
                        socket.emit('session_closed', {
