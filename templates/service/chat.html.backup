                    }
                    
                    // ç§»é™¤è®¿å®¢
                    removeVisitorFromList(currentVisitorId);
                    alert('è½¬æ¥æˆåŠŸ');
                } else {
                    alert('è½¬æ¥å¤±è´¥: ' + data.msg);
                }
            })
            .catch(error => {
                console.error('è½¬æ¥å¤±è´¥:', error);
                alert('è½¬æ¥å¤±è´¥ï¼Œè¯·é‡è¯•');
            });
        }

        // ç»“æŸä¼šè¯
        function endChat() {
            if (!currentVisitorId) {
                alert('è¯·å…ˆé€‰æ‹©ä¸€ä¸ªè®¿å®¢');
                return;
            }
            
            if (!confirm('ç¡®å®šè¦ç»“æŸæ­¤ä¼šè¯å—ï¼Ÿ')) {
