        // æ›´æ–°ç»Ÿè®¡
        function updateStats() {
            const onlineCount = Object.keys(visitors).length;
            document.getElementById('onlineCount').textContent = onlineCount;
            document.getElementById('pendingCount').textContent = onlineCount;
